<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件名"
        android:id="@+id/tv_fileName2" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/tv_fileName2"
        android:layout_alignParentStart="true"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:layout_toStartOf="@+id/imgBtn_upload" />

    <ImageButton
        android:layout_marginRight="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtn_delete2"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignTop="@+id/imgBtn_pause2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtn_pause2"
        android:src="@android:drawable/ic_media_pause"
        android:layout_alignTop="@+id/imgBtn_upload"
        android:layout_toStartOf="@+id/imgBtn_delete2" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtn_upload"
        android:src="@android:drawable/ic_menu_upload"
        android:layout_below="@+id/tv_fileName2"
        android:layout_toStartOf="@+id/imgBtn_pause2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/100"
        android:id="@+id/tv_max2"
        android:layout_alignTop="@+id/imgBtn_upload"
        android:layout_toStartOf="@+id/imgBtn_upload" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_progress2"
        android:layout_alignTop="@+id/tv_max2"
        android:layout_toStartOf="@+id/tv_max2" />

</RelativeLayout>
